{
  "name": "@lox-space/react",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MPL-2.0",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react --loader \".jpg=dataurl\" --loader \".hdr=dataurl\"",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react --loader \".jpg=dataurl\" --loader \".hdr=dataurl\"",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@lox-space/tsconfig": "workspace:^",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/three": "^0.180.0",
    "eslint": "^9.38.0",
    "eslint-config-lox-space": "workspace:^",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@lox-space/core": "workspace:^",
    "three": "^0.180.0"
  }
}
